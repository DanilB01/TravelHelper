<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="ru.itmo.travelhelper.screens.activities.CategoryFragment"
        android:label="Что выбираем?"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/action_categoryFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="ru.itmo.travelhelper.screens.activities.DetailsFragment"
        android:label="Детали"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_detailsFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <argument
            android:name="selectedCategories"
            app:argType="string[]" />
    </fragment>
</navigation>
