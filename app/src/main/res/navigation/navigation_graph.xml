<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/hotelFragment">

    <fragment
        android:id="@+id/hotelFragment"
        android:name="com.example.hotelapp.HotelFragment"
        android:label="Выбор отелей"
        tools:layout="@layout/fragment_hotel">
        <action
            android:id="@+id/action_hotelFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.hotelapp.CategoryFragment"
        android:label="Что выбираем?"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/action_categoryFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_categoryFragment_to_hotelFragment"
            app:destination="@id/hotelFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.hotelapp.DetailsFragment"
        android:label="Детали"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_detailsFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
</navigation>
