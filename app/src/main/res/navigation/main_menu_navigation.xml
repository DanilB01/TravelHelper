<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/expressItem">

    <fragment
        android:id="@+id/timetableItem"
        android:name="ru.itmo.travelhelper.screens.main.MainTimetableFragment"
        tools:layout="@layout/fragment_main_timetable" >
        <action
            android:id="@+id/action_timetableItem_to_emptyTravelsItem"
            app:destination="@id/emptyTravelsItem" />
    </fragment>

    <fragment
        android:id="@+id/expressItem"
        android:name="ru.itmo.travelhelper.screens.main.MainExpressFragment"
        tools:layout="@layout/fragment_main_express" >
    </fragment>

    <fragment
        android:id="@+id/historyItem"
        android:name="ru.itmo.travelhelper.screens.main.MainHistoryFragment"
        tools:layout="@layout/fragment_main_history" >
        <action
            android:id="@+id/action_historyItem_to_emptyTravelsItem"
            app:destination="@id/emptyTravelsItem" />
    </fragment>
    <fragment
        android:id="@+id/emptyTravelsItem"
        android:name="ru.itmo.travelhelper.screens.main.MainEmptyTravelsFragment"
        android:label="fragment_main_empty_travels"
        tools:layout="@layout/fragment_main_empty_travels" >
        <action
            android:id="@+id/action_emptyTravelsItem_to_historyItem"
            app:destination="@id/historyItem" />
        <action
            android:id="@+id/action_emptyTravelsItem_to_expressItem"
            app:destination="@id/expressItem" />
        <action
            android:id="@+id/action_emptyTravelsItem_to_timetableItem"
            app:destination="@id/timetableItem" />
    </fragment>

</navigation>