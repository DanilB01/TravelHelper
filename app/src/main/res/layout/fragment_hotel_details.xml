<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.hotels.HotelDetailsFragment">

    <TextView
        android:id="@+id/textViewHotelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="6dp"
        android:background="#D2E4F6"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left"
        android:paddingHorizontal="25dp"
        android:paddingVertical="8dp"
        android:text="Стоимость"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="22dp"
            android:paddingEnd="22dp">

            <TextView
                android:id="@+id/textViewOfficialSiteLink"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="34dp"
                android:autoLink="web"
                android:clickable="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"
                android:text="Официальный сайт - перейти"
                android:textSize="22sp"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewHotelDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="34dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"

                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"


                app:layout_constraintTop_toBottomOf="parent"
                tools:text="Откройте для себя уникальное сочетание комфорта и природы, где современный стилль встречается с потрясающими пейзажами" />

            <ImageView
                android:id="@+id/imageViewHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/init_picture_3"
                android:contentDescription="TODO"
                 />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>