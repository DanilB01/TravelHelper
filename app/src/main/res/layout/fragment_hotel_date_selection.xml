<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background"
    tools:context=".screens.hotels.HotelDateSelectionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="32dp">

            <TextView
                android:id="@+id/textViewCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Дата заселения"
                android:textSize="25sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewCheckInDate"
                android:layout_width="220dp"

                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/shape_rounded_date_inputfield"
                android:clickable="false"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:hint="Выберите дату"
                android:inputType="date"
                android:paddingStart="16dp"

                android:textColorHint="#4D44464F"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCheckIn" />


            <TextView
                android:id="@+id/textViewDateFormatCheckIn"
                android:layout_width="220dp"
                android:layout_height="14dp"

                android:layout_marginStart="21dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"
                android:paddingStart="11dp"
                android:text="MM/DD/YYYY"
                android:textColor="#44464F"
                android:textSize="9sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCheckInDate" />

            <TextView
                android:id="@+id/textViewCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="47dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Дата выселения"

                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewDateFormatCheckIn" />


            <TextView
                android:id="@+id/textViewCheckOutDate"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/shape_rounded_date_inputfield"
                android:clickable="false"
                android:ems="10"

                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"

                android:hint="Выберите дату"
                android:inputType="date"

                android:paddingStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCheckOut"

                />

            <TextView
                android:id="@+id/textViewDateFormatCheckOut"
                android:layout_width="220dp"
                android:layout_height="14dp"

                android:layout_marginStart="21dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"
                android:paddingStart="11dp"
                android:text="MM/DD/YYYY"
                android:textColor="#44464F"
                android:textSize="9sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCheckOutDate" />

            <TextView
                android:id="@+id/textViewVisitorsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="47dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Количество гостей"

                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewDateFormatCheckOut" />


            <EditText
                android:id="@+id/editTextVisitorsCount"

                android:layout_width="220dp"
                android:layout_height="48dp"

                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/shape_underline_visitors_count_input_field"
                android:ems="10"
                android:paddingStart="16dp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Кол-во гостей"
                android:inputType="number"
                tools:text = '35'

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewVisitorsCount"


                />

            <TextView
                android:id="@+id/textViewVisitorsCountInputDecription"
                android:layout_width="220dp"
                android:layout_height="14dp"

                android:layout_marginStart="21dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"
                android:paddingStart="11dp"
                android:text="Введите число"
                android:textColor="#44464F"
                android:textSize="9sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextVisitorsCount" />

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constraintLayoutDatePickerCheckIn"
                android:layout_width="264dp"
                android:layout_height="333dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_calendar_layout"
                android:backgroundTint="#D7E3F7"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCheckInDate">

                <CalendarView
                    android:id="@+id/calendarViewCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:fontFamily="@font/roboto_medium"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/buttonClearCheckIn"
                    android:layout_width="76dp"

                    android:layout_height="33dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Clear"
                    android:textColor="#556B8F"
                    android:textSize="9dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calendarViewCheckIn" />

                <Button
                    android:id="@+id/buttonCancelCheckIn"
                    android:layout_width="80dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/roboto_medium"

                    android:text="Cancel"
                    android:textColor="#556B8F"
                    android:textSize="9dp"
                    app:layout_constraintEnd_toStartOf="@+id/buttonConfirmCheckInDate"
                    app:layout_constraintTop_toBottomOf="@+id/calendarViewCheckIn" />

                <Button
                    android:id="@+id/buttonConfirmCheckInDate"
                    android:layout_width="70dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:text="OK"
                    android:textColor="#556B8F"
                    android:textSize="9dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calendarViewCheckIn" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutDatePickerCheckOut"
                android:layout_width="264dp"
                android:layout_height="333dp"
                android:layout_marginStart="21dp"


                android:layout_marginTop="17dp"
                android:background="@drawable/shape_calendar_layout"
                android:backgroundTint="#D7E3F7"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewDateFormatCheckOut">

                <CalendarView
                    android:id="@+id/calendarViewCheckOut"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"

                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/buttonClearCheckOut"
                    android:layout_width="76dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Clear"
                    android:textColor="#556B8F"
                    android:textSize="9dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calendarViewCheckOut" />

                <Button
                    android:id="@+id/buttonCancelCheckOut"
                    android:layout_width="80dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Cancel"
                    android:textColor="#556B8F"
                    android:textSize="9dp"
                    app:layout_constraintEnd_toStartOf="@+id/buttonConfirmCheckOutDate"
                    app:layout_constraintTop_toBottomOf="@+id/calendarViewCheckOut" />

                <Button
                    android:id="@+id/buttonConfirmCheckOutDate"
                    android:layout_width="70dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:text="OK"
                    android:textColor="#556B8F"
                    android:textSize="9dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calendarViewCheckOut" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>