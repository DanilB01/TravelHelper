<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background"
    tools:context=".screens.hotels.RoomSelectionFragment">

    <TextView
        android:id="@+id/textViewCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="83dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Заселение"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="323dp"
        android:layout_height="42dp"

        android:layout_marginStart="15dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/shape_selected_date_inputfield"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:text="Benalla Tourist Park 3"

        android:textColor="#F5EFF7"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="9dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="25dp"
        android:scrollbarThumbVertical="@drawable/shape_solid_scroll_thumb"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:paddingStart="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="353dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_solid_hotel_card"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="115dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="23dp"
                    android:src="@drawable/init_picture_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewRoomType"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left"
                    android:text="Standart"
                    android:textSize="23sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewSquare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left"
                    android:text="35м"
                    android:textSize="13sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewRoomType" />

                <TextView
                    android:id="@+id/wrap_content"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left"
                    android:text="2"
                    android:textSize="9sp"

                    app:layout_constraintStart_toEndOf="@+id/textViewSquare"
                    app:layout_constraintTop_toTopOf="@+id/textViewSquare" />

                <LinearLayout
                    android:layout_width="204dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="32dp"

                    android:orientation="horizontal"
                    android:paddingEnd="7dp"
                    android:layout_marginTop="33dp"

                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewSquare">

                    <ImageView
                        android:id="@+id/imageViewIcon1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"

                        android:src="@drawable/shower_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageViewIcon2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"

                        android:src="@drawable/animal_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>