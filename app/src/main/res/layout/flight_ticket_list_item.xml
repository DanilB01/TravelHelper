<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="@drawable/shape_rounded_flight_tickets_list_container"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/fieldDepartureTimeTicketListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="*время вылета*"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="*место вылета*"
        android:id="@+id/fieldDeparturePlaceTicketListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toStartOf="@id/fieldArrivalPlaceTicketListItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fieldDepartureTimeTicketListItem"/>

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/flight_ticket_item_separator"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/fieldDepartureTimeTicketListItem"
        app:layout_constraintEnd_toStartOf="@+id/fieldArrivalTimeTicketListItem"
        app:layout_constraintStart_toEndOf="@+id/fieldDepartureTimeTicketListItem"
        app:layout_constraintTop_toTopOf="@+id/fieldDepartureTimeTicketListItem" />

    <TextView
        android:text="*время прилета*"
        android:id="@+id/fieldArrivalTimeTicketListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fieldArrivalPlaceTicketListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto_medium"
        android:text="*место прилета*"
        android:layout_marginStart="15dp"
        android:gravity="end"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fieldDeparturePlaceTicketListItem"
        app:layout_constraintTop_toBottomOf="@id/fieldArrivalTimeTicketListItem" />

    <TextView
        android:text="Авиакомпания:"
        android:id="@+id/textCompanyNameTicketListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fieldDeparturePlaceTicketListItem"/>
    <TextView
        android:id="@+id/fieldCompanyNameTicketListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toEndOf="@id/textCompanyNameTicketListItem"
        app:layout_constraintTop_toTopOf="@id/textCompanyNameTicketListItem"
        app:layout_constraintBottom_toBottomOf="@id/textCompanyNameTicketListItem"
        android:layout_marginStart="15dp"
        tools:text="TestText"/>

    <TextView
        android:text="Стоимость билета:"
        android:id="@+id/textCostTicketListItem"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textCompanyNameTicketListItem"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/fieldCostTicketListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/textCostTicketListItem"
        app:layout_constraintTop_toTopOf="@id/textCostTicketListItem"
        app:layout_constraintBottom_toBottomOf="@id/textCostTicketListItem"
        tools:text="TestText"/>


    <TextView
        android:text="Рейс:"
        android:id="@+id/textFlightCodeTicketListItem"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        app:layout_constraintTop_toBottomOf="@id/textCompanyNameTicketListItem"
        app:layout_constraintStart_toEndOf="@id/textCostTicketListItem"
        app:layout_constraintTop_toTopOf="@id/textCostTicketListItem"
        app:layout_constraintBottom_toBottomOf="@id/textCostTicketListItem" />
    <TextView
        android:id="@+id/fieldFlightCodeTicketListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/textFlightCodeTicketListItem"
        app:layout_constraintTop_toTopOf="@id/textFlightCodeTicketListItem"
        app:layout_constraintBottom_toBottomOf="@id/textFlightCodeTicketListItem"
        tools:text="TestText"/>


</androidx.constraintlayout.widget.ConstraintLayout>