<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.main.MainEmptyTravelsFragment">

    <TextView
        android:id="@+id/textEmptyMainEmptyScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Пока пусто..."
        android:textSize="30sp"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPlanMainEmptyScreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Запланировать путешествие?"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:layout_marginEnd="60dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textEmptyMainEmptyScreen" />

    <android.widget.Button
        android:id="@+id/buttonYesMainEmptyScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_rounded_init_button"
        android:fontFamily="@font/roboto_medium"
        android:paddingHorizontal="47dp"
        android:paddingVertical="14dp"
        android:text="Да"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textPlanMainEmptyScreen"
        app:layout_constraintTop_toBottomOf="@id/textPlanMainEmptyScreen" />


    <android.widget.Button
        android:id="@+id/buttonNoMainEmptyScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_back_button_flight_tickets"
        android:paddingHorizontal="47dp"
        android:paddingVertical="14dp"
        android:layout_marginTop="25dp"
        android:text="Нет"
        android:textAllCaps="false"
        android:textColor="@color/flight_tickets_button_back_text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textPlanMainEmptyScreen"
        app:layout_constraintTop_toBottomOf="@+id/textPlanMainEmptyScreen" />


</androidx.constraintlayout.widget.ConstraintLayout>