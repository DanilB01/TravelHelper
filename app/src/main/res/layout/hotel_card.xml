<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="353dp"
        android:layout_height="160dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="#D2E4F6"
        android:clickable="true"
        app:cardCornerRadius="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:onClick="onClick"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="115dp"
                android:layout_height="78dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="23dp"
                android:src="@drawable/init_picture_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewCheckInTime"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"
                android:text="Время - 9.05"
                android:textSize="23sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewHotelName"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"
                android:text="Belmont Bed  Breakfast"
                android:textSize="14sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCheckInTime" />

            <TextView
                android:id="@+id/textViewMinPriceForNignt"
                android:layout_width="170dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"

                android:text="Минимальная стоимость за ночь: 8 200"
                android:textSize="14sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewHotelName" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>